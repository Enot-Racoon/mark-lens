{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mark Lens",
  "version": "0.1.0",
  "identifier": "com.alexeykarasev.mark-lens",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mark Lens",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https:; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "A cross-platform Markdown viewer and editor",
    "longDescription": "Mark Lens is a beautiful, cross-platform desktop application for viewing and editing Markdown files with live preview.",
    "fileAssociations": [
      {
        "ext": ["md"],
        "name": "Markdown",
        "description": "Markdown file",
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": ["markdown"],
        "name": "Markdown",
        "description": "Markdown file",
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": ["mdown"],
        "name": "Markdown",
        "description": "Markdown file",
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": ["mkd"],
        "name": "Markdown",
        "description": "Markdown file",
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": ["mkdn"],
        "name": "Markdown",
        "description": "Markdown file",
        "mimeType": "text/markdown",
        "role": "Editor"
      }
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "linux": {
      "deb": {
        "depends": [],
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      }
    }
  }
}
